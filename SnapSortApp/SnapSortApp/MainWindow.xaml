<Window x:Class="SnapSortApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnapSort - Image Sorting" Height="550" Width="750"
        Background="{StaticResource MainBackground}"
        Foreground="{StaticResource TextColor}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <!-- Drop Zone -->
        <Border Style="{StaticResource DropBorderStyle}"
                AllowDrop="True" Drop="ImageDrop">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Drag and Drop Images Here"
                           FontSize="20" Foreground="LightGray" FontWeight="Bold" />

                <!--<Image Source="Images/upload_icon.png" Width="60" Opacity="0.7"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                    </Image.RenderTransform>
                </Image>-->

                <ListBox ItemsSource="{Binding Images}" Style="{StaticResource StyledListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding Thumbnail}" Width="50" Height="50"
                                       Margin="5" ClipToBounds="True" />
                                <TextBlock Text="{Binding FileName}"
                                           FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Content="Sort Images"
                        Command="{Binding SortImagesCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="15,10,15,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
