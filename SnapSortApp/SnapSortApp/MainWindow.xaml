<Window x:Class="SnapSortApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnapSort - Image Sorting" Height="550" Width="750"
        Background="{StaticResource MainBackground}"
        Foreground="{StaticResource TextColor}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Border Style="{StaticResource DropBorderStyle}"
                AllowDrop="True" 
                Drop="ImageDrop">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <TextBlock Text="Save to: " 
                               FontSize="14" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding TargetFolder, Mode=OneWay}" 
                             MinWidth="400" 
                             TextAlignment="Center"
                             IsReadOnly="True" 
                             Margin="5,0,10,0"/>
                    <Button Content="Change Folder" 
                            Command="{Binding ChangeFolderCommand}" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>

                <TextBlock Text="Images"
                           Grid.Row="1"
                           FontSize="14" 
                           Foreground="LightGray" 
                           FontWeight="Bold" />

                <ListBox Grid.Row="2" ItemsSource="{Binding Images}" Style="{StaticResource StyledListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding Thumbnail}" Width="50" Height="50"
                                       Margin="5" ClipToBounds="True" />
                                <TextBlock Text="{Binding FileName}"
                                           FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Sort"
                            Command="{Binding SortImagesCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="15,5"/>
                    <Button Content="Browse" 
                            Command="{Binding BrowseImagesCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="15,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
