<Window x:Class="SnapSortApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnapSort - Image Sorting" Height="500" Width="700">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Gray" Padding="20" Margin="10"
                AllowDrop="True" Drop="ImageDrop">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Drag Image here" FontSize="18" Foreground="Gray"/>
                <ListBox ItemsSource="{Binding Images}" DisplayMemberPath="FileName"
                         Width="300" Height="200"/>
                <Button Content="Sort Images" Command="{Binding SortImagesCommand}" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
