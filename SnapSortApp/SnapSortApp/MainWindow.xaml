<Window x:Class="SnapSortApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SnapSort - Image Sorting" Height="550" Width="750"
        Background="{StaticResource MainBackground}"
        Foreground="{StaticResource TextColor}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Margin="20">
        <Border Style="{StaticResource DropBorderStyle}"
                AllowDrop="True" 
                Drop="ImageDrop">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" 
                      Margin="0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Save to: " 
                               Grid.Column="0"
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding TargetFolder, Mode=OneWay}" 
                             TextAlignment="Left"
                             HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center"
                             MinWidth="400" 
                             IsReadOnly="True"
                             Grid.Column="1"
                             Margin="5 0"/>
                    <Button Content="Change Folder" 
                            Command="{Binding ChangeFolderCommand}" 
                            Grid.Column="2"
                            Margin="5 0 0 0" />
                </Grid>

                <TextBlock Text="Images"
                           Grid.Row="1"/>

                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding Images}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding Thumbnail}" Width="50" Height="50"
                                       Margin="5" ClipToBounds="True" />
                                <TextBlock Text="{Binding FileName}"
                                           FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 10">
                    <Button Content="Sort"
                            Command="{Binding SortImagesCommand}"
                            Margin="5"/>
                    <Button Content="Browse" 
                            Command="{Binding BrowseImagesCommand}"
                            Margin="5 5 0 5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
